{{#each operators as |operator| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <a href="/profile/{{operator.id}}">

    <h2>{{{get_emoji}}} {{operator.operator_name}}</h2>
  </div>
  <div class="col-md-6">
    <h3><a href="mailto:{{operator.email}}">{{operator.email}}</a></h3>
    <h3> <a href="audit" class="btn btn-outline-secondary"> Click to Audit </a></h3>
  </div>
</div>
{{/each}}

<script src="./js/oppo.js"></script>


